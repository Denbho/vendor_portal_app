<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Email template for OTP Verification -->
        <record id="customer_portal_otp_verification" model="mail.template">
            <field name="name">Customer Portal: OTP Verification</field>
            <field name="model_id" ref="skit_customer_portal.model_customer_portal_otp_verification"/>
            <field name="subject">OTP Verification</field>
            <field name="email_from">${('"%s" &lt;%s&gt;' % (object.company_id.name, object.company_id.email))|safe}</field>
            <field name="email_to">${object.email | safe}</field>
            <field name="body_html" type="html">
					<div>
						<p>Dear Sir/Madam,</p>
						<br />
						<p>
				         Your one time password (OTP) for Customer portal login is : ${object.otp}<br /></p>
                        <br />
       					<p>Thanking You!</p>
                    </div>
            </field>
            <field name="auto_delete" eval="True"/>
            <field name="user_signature" eval="False"/>
        </record>
        
        <!-- Cron that clear the OTP lder than 10 minutes -->
        <record forcecreate="True" id="ir_cron_clear_otp_data_action" model="ir.cron">
            <field name="name">Customer portal: OTP Verification</field>
            <field name="model_id" ref="skit_customer_portal.model_customer_portal_otp_verification"/>
            <field name="state">code</field>
            <field name="code">model.clear_otp_datas()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">10</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>
    </data>
</odoo>
