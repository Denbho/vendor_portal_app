<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="admin_brand_view_company_form" model="ir.ui.view">
            <field name="name">admin.brand.res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <field name="website" position="after">
                    <field name="brand_id"/>
                </field>
            </field>
        </record>

        <record id="admin_brand_view_company_tree" model="ir.ui.view">
            <field name="name">admin.brand.res.company.tree</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="brand_id"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
